{
  "rules": {
    "users": {
      ".indexOn": ["phoneNumber"],
      "$userId": {
        ".read": "auth.uid === $userId",
        ".write": "auth.uid === $userId || !data.exists()",
        "cart": {
          // Allow cart operations without auth for better offline support
          ".read": true,
          ".write": true
        }
      }
    },
    "sessions": {
      "$userId": {
        ".read": "auth.uid === $userId",
        ".write": "auth.uid === $userId"
      }
    },
    "products": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "categories": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "coupons": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "orders": {
      "$userId": {
        ".read": "auth.uid === $userId",
        ".write": "auth.uid === $userId"
      }
    },
    ".read": "auth != null",
    ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
  }
}