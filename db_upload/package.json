    "cleanup-bakery-products": "node cleanup_products.js --confirm",
    "update-image-paths": "node update_image_paths.js",
    "update-image-paths:bakery": "node update_image_paths.js bakeries_biscuits",
    "update-image-paths:beauty": "node update_image_paths.js beauty_hygiene",
    "update-image-paths:dairy": "node update_image_paths.js dairy_eggs",
    "update-image-paths:fruits": "node update_image_paths.js fruits_vegetables",
    "update-image-paths:grocery": "node update_image_paths.js grocery_kitchen",
    "update-image-paths:snacks": "node update_image_paths.js snacks_drinks",
    "add-beauty-products": "node add_products_beauty.js",
    "cleanup-beauty-products": "node cleanup_beauty_products.js --confirm",
    "add-dairy-products": "node add_products_dairy.js",
    "cleanup-dairy-products": "node cleanup_dairy_products.js --confirm",
    "add-fruits-vegetables-products": "node add_products_fruits_vegetables.js",
    "cleanup-fruits-vegetables-products": "node cleanup_fruits_vegetables_products.js --confirm",
    "add-grocery-kitchen-products": "node add_products_grocery_kitchen.js",
    "cleanup-grocery-kitchen-products": "node cleanup_grocery_kitchen_products.js --confirm",
    "add-snacks-drinks-products": "node add_products_snacks_drinks.js",
    "cleanup-snacks-drinks-products": "node cleanup_snacks_drinks_products.js --confirm",
    "add-all-products": "npm run add-bakery-products && npm run add-beauty-products && npm run add-dairy-products && npm run add-fruits-vegetables-products && npm run add-grocery-kitchen-products && npm run add-snacks-drinks-products",
    "upload-product-images": "node upload_product_images.js",
    "upload-product-images-for-category": "node upload_product_images.js",
    "verify-product-images": "node verify_product_images.js",
    "check-products-folder": "node check_products_folder.js"
